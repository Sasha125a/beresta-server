{
  "name": "beresta-server",
  "version": "1.0.0",
  "description": "Backend server for Beresta messaging application with WebRTC, WebSocket, and file sharing support",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "ping": "curl -f https://your-app-name.onrender.com/health || exit 1",
    "dev": "nodemon server.js",
    "setup": "node -e \"console.log('Running initial setup...'); require('./server.js');\"",
