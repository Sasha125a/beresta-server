    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "messaging",
    "chat",
    "webrtc",
    "video-call",
    "audio-call",
    "websocket",
    "file-sharing",
    "sqlite",
    "express",
    "agora",
    "real-time"
  ],
  "author": "Beresta Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "sqlite3": "^5.1.6",
    "multer": "^1.4.5-lts.1",
    "mime-types": "^2.1.35",
    "uuid": "^9.0.1",
    "fluent-ffmpeg": "^2.1.2",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "agora-access-token": "^2.0.4",
    "socket.io": "^4.7.4",
    "firebase-admin": "^11.11.1"
  },
  "devDependencies": {
