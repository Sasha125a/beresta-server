{
  "name": "beresta-server",
  "version": "1.0.0",
  "description": "Backend server for Beresta Messenger application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "setup": "npm install",
    "clean": "rm -rf node_modules package-lock.json",
    "db:init": "node -e \"console.log('Database will be initialized on first run');\"",
    "backup": "cp beresta.db beresta.backup.$(date +%Y%m%d_%H%M%S).db"
  },
  "keywords": [
    "messenger",
    "chat",
    "real-time",
    "file-upload",
    "sqlite",
    "express"
  ],
  "author": "Beresta Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "sqlite3": "^5.1.6",
    "multer": "^1.4.5-lts.1",
    "mime-types": "^2.1.35",
    "uuid": "^9.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "ffmpeg-static": "^5.1.0",
    "ffprobe-static": "^3.1.0"
    "agora-access-token": "^2.0.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/beresta-server.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/beresta-server/issues"
  },
  "homepage": "https://github.com/your-username/beresta-server#readme",
  "config": {
    "port": 3000,
    "upload_dir": "./uploads",
    "db_path": "./beresta.db"
  },
  "optionalDependencies": {},
  "peerDependencies": {},
  "bundledDependencies": [],
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ]
}



